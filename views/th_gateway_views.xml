<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_iot_th_gateway_list" model="ir.ui.view">
        <field name="name">iot.th.gateway.list</field>
        <field name="model">iot.th.gateway</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="serial"/>
                <field name="company_id"/>
                <field name="department_id"/>
                <field name="location_id"/>
                <field name="online"/>
                <field name="sensor_count"/>
                <field name="alert_count"/>
                <field name="last_seen"/>
            </list>
        </field>
    </record>

    <record id="view_iot_th_gateway_form" model="ir.ui.view">
        <field name="name">iot.th.gateway.form</field>
        <field name="model">iot.th.gateway</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_open_sensors" type="object" string="Sensors"/>
                    <button name="action_open_alerts" type="object" string="Open Alerts" class="btn-primary"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="serial" readonly="1"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="department_id"/>
                            <field name="location_id"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="online" readonly="1"/>
                            <field name="last_seen" readonly="1"/>
                            <field name="sensor_count" readonly="1"/>
                            <field name="alert_count" readonly="1"/>
                            <field name="sampling_interval_min"/>
                            <field name="statistics_window_hours"/>
                        </group>
                    </group>
                    <group>
                        <field name="tcp_token" password="True"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_iot_th_gateway" model="ir.actions.act_window">
        <field name="name">TH Gateways</field>
        <field name="res_model">iot.th.gateway</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_iot_environment_root" name="Environment" parent="menu_iot_mode_detailed" sequence="70" groups="base.group_erp_manager"/>
    <menuitem id="menu_iot_th_gateway" name="Gateways" parent="menu_iot_environment_root" action="action_iot_th_gateway" sequence="10" groups="base.group_no_one"/>
    <record id="menu_iot_th_gateway" model="ir.ui.menu">
        <field name="group_ids" eval="[(6, 0, [ref('base.group_no_one')])]"/>
    </record>
</odoo>
