<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_iot_th_raw_packet_list" model="ir.ui.view">
        <field name="name">iot.th.raw.packet.list</field>
        <field name="model">iot.th.raw.packet</field>
        <field name="arch" type="xml">
            <list create="0" delete="0" edit="0">
                <field name="received_at"/>
                <field name="source_ip"/>
                <field name="source_port"/>
                <field name="protocol"/>
                <field name="node_id"/>
                <field name="serial_hint"/>
                <field name="parse_ok"/>
                <field name="parse_error"/>
            </list>
        </field>
    </record>

    <record id="view_iot_th_raw_packet_form" model="ir.ui.view">
        <field name="name">iot.th.raw.packet.form</field>
        <field name="model">iot.th.raw.packet</field>
        <field name="arch" type="xml">
            <form create="0" delete="0" edit="0">
                <sheet>
                    <group>
                        <group>
                            <field name="received_at"/>
                            <field name="source_ip"/>
                            <field name="source_port"/>
                            <field name="protocol"/>
                            <field name="node_id"/>
                        </group>
                        <group>
                            <field name="gateway_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="serial_hint"/>
                            <field name="parse_ok"/>
                        </group>
                    </group>
                    <group>
                        <field name="parse_error"/>
                        <field name="raw_payload"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_iot_th_raw_packet_search" model="ir.ui.view">
        <field name="name">iot.th.raw.packet.search</field>
        <field name="model">iot.th.raw.packet</field>
        <field name="arch" type="xml">
            <search>
                <field name="source_ip"/>
                <field name="protocol"/>
                <field name="node_id"/>
                <field name="serial_hint"/>
                <field name="parse_ok"/>
                <filter name="filter_parse_ok" string="Parse OK" domain="[('parse_ok', '=', True)]"/>
                <filter name="filter_parse_fail" string="Parse Fail" domain="[('parse_ok', '=', False)]"/>
                <filter name="filter_today" string="Today" domain="[('received_at', '&gt;=', context_today())]"/>
            </search>
        </field>
    </record>

    <record id="action_iot_th_raw_packet" model="ir.actions.act_window">
        <field name="name">Raw Packets</field>
        <field name="res_model">iot.th.raw.packet</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_iot_th_raw_packet_search"/>
    </record>

    <menuitem id="menu_iot_th_raw_packet" name="Raw Packets" parent="menu_iot_environment_root" action="action_iot_th_raw_packet" sequence="50" groups="base.group_erp_manager"/>
</odoo>
