<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_iot_th_alert_list" model="ir.ui.view">
        <field name="name">iot.th.alert.list</field>
        <field name="model">iot.th.alert</field>
        <field name="arch" type="xml">
            <list>
                <field name="occurred_at"/>
                <field name="state"/>
                <field name="alert_type"/>
                <field name="gateway_id"/>
                <field name="sensor_id"/>
                <field name="threshold_value"/>
                <field name="actual_value"/>
                <field name="closed_at"/>
            </list>
        </field>
    </record>

    <record id="view_iot_th_alert_form" model="ir.ui.view">
        <field name="name">iot.th.alert.form</field>
        <field name="model">iot.th.alert</field>
        <field name="arch" type="xml">
            <form create="0" delete="0">
                <sheet>
                    <group>
                        <field name="state" readonly="1"/>
                        <field name="alert_type" readonly="1"/>
                        <field name="gateway_id" readonly="1"/>
                        <field name="sensor_id" readonly="1"/>
                        <field name="occurred_at" readonly="1"/>
                        <field name="closed_at" readonly="1"/>
                        <field name="threshold_value" readonly="1"/>
                        <field name="actual_value" readonly="1"/>
                    </group>
                    <group>
                        <field name="note"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_iot_th_alert" model="ir.actions.act_window">
        <field name="name">Alerts</field>
        <field name="res_model">iot.th.alert</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('company_id', '!=', False)]</field>
    </record>

    <menuitem id="menu_iot_th_alert" name="Alerts" parent="menu_iot_environment_root" action="action_iot_th_alert" sequence="40" groups="base.group_erp_manager"/>
</odoo>
