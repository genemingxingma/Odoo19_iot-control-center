<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_iot_device_group_list" model="ir.ui.view">
        <field name="name">iot.device.group.list</field>
        <field name="model">iot.device.group</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="company_id"/>
                <field name="department_id"/>
                <field name="location_id"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_iot_device_group_form" model="ir.ui.view">
        <field name="name">iot.device.group.form</field>
        <field name="model">iot.device.group</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_turn_on" type="object" string="Turn On Group" class="btn-primary"/>
                    <button name="action_turn_off" type="object" string="Turn Off Group"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="department_id"/>
                            <field name="location_id"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Switches">
                            <field name="device_ids" widget="many2many_tags"/>
                        </page>
                        <page string="Schedules">
                            <field name="schedule_ids" context="{'default_group_id': id}">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="command"/>
                                    <field name="timezone"/>
                                    <field name="hour"/>
                                    <field name="minute"/>
                                    <field name="active"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_iot_device_group" model="ir.actions.act_window">
        <field name="name">Groups</field>
        <field name="res_model">iot.device.group</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_iot_device_group" name="Groups" parent="menu_iot_switch_root" action="action_iot_device_group" sequence="15" groups="base.group_erp_manager"/>
</odoo>
