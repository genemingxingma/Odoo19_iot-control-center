<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_iot_mqtt_message_tree" model="ir.ui.view">
        <field name="name">iot.mqtt.message.tree</field>
        <field name="model">iot.mqtt.message</field>
        <field name="arch" type="xml">
            <list create="0" edit="0" delete="0">
                <field name="received_at"/>
                <field name="state"/>
                <field name="topic"/>
                <field name="device_serial"/>
                <field name="message_type"/>
                <field name="error"/>
            </list>
        </field>
    </record>

    <record id="action_iot_mqtt_message" model="ir.actions.act_window">
        <field name="name">MQTT Messages</field>
        <field name="res_model">iot.mqtt.message</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'create': False, 'edit': False, 'delete': False}</field>
    </record>

    <menuitem id="menu_iot_message" name="MQTT Messages" parent="menu_iot_switch_root" action="action_iot_mqtt_message" sequence="60" groups="base.group_erp_manager"/>
</odoo>
