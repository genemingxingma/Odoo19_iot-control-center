<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_iot_department_tree" model="ir.ui.view">
        <field name="name">iot.department.tree</field>
        <field name="model">iot.department</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="company_id"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_iot_department_form" model="ir.ui.view">
        <field name="name">iot.department.form</field>
        <field name="model">iot.department</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="company_id" groups="base.group_multi_company"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_iot_department" model="ir.actions.act_window">
        <field name="name">Departments</field>
        <field name="res_model">iot.department</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_iot_department" name="Departments" parent="menu_iot_switch_root" action="action_iot_department" sequence="40" groups="base.group_erp_manager"/>
</odoo>
