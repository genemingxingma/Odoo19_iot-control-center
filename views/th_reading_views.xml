<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_iot_th_reading_list" model="ir.ui.view">
        <field name="name">iot.th.reading.list</field>
        <field name="model">iot.th.reading</field>
        <field name="arch" type="xml">
            <list>
                <field name="reported_at"/>
                <field name="node_id"/>
                <field name="sensor_id"/>
                <field name="sensor_code"/>
                <field name="temperature"/>
                <field name="humidity"/>
            </list>
        </field>
    </record>

    <record id="view_iot_th_reading_graph" model="ir.ui.view">
        <field name="name">iot.th.reading.graph</field>
        <field name="model">iot.th.reading</field>
        <field name="arch" type="xml">
            <graph string="Temperature/Humidity Trend" type="line">
                <field name="reported_at" interval="hour"/>
                <field name="temperature" type="measure" operator="avg"/>
                <field name="humidity" type="measure" operator="avg"/>
                <field name="sensor_id" type="row"/>
            </graph>
        </field>
    </record>

    <record id="view_iot_th_reading_pivot" model="ir.ui.view">
        <field name="name">iot.th.reading.pivot</field>
        <field name="model">iot.th.reading</field>
        <field name="arch" type="xml">
            <pivot string="Temperature/Humidity Statistics">
                <field name="reported_at" type="col" interval="day"/>
                <field name="sensor_id" type="row"/>
                <field name="temperature" type="measure" operator="avg"/>
                <field name="humidity" type="measure" operator="avg"/>
            </pivot>
        </field>
    </record>

    <record id="view_iot_th_reading_search" model="ir.ui.view">
        <field name="name">iot.th.reading.search</field>
        <field name="model">iot.th.reading</field>
        <field name="arch" type="xml">
            <search>
                <field name="node_id"/>
                <field name="sensor_id"/>
                <field name="sensor_code"/>
                <group>
                    <filter string="Sensor" name="group_sensor" context="{'group_by': 'sensor_id'}"/>
                    <filter string="Hour" name="group_hour" context="{'group_by': 'reported_at:hour'}"/>
                    <filter string="Day" name="group_day" context="{'group_by': 'reported_at:day'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_iot_th_reading" model="ir.actions.act_window">
        <field name="name">Readings &amp; Analysis</field>
        <field name="res_model">iot.th.reading</field>
        <field name="view_mode">graph,list,pivot</field>
        <field name="search_view_id" ref="view_iot_th_reading_search"/>
        <field name="domain">[('company_id', '!=', False)]</field>
        <field name="context">{'graph_mode': 'line', 'graph_measure': 'temperature', 'graph_stacked': False, 'graph_cumulated': False}</field>
    </record>

    <menuitem id="menu_iot_th_reading" name="Readings &amp; Analysis" parent="menu_iot_environment_root" action="action_iot_th_reading" sequence="30" groups="base.group_erp_manager"/>
</odoo>
