<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_iot_schedule_tree" model="ir.ui.view">
        <field name="name">iot.schedule.tree</field>
        <field name="model">iot.schedule</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="device_id"/>
                <field name="group_id"/>
                <field name="command"/>
                <field name="timezone"/>
                <field name="hour"/>
                <field name="minute"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_iot_schedule_form" model="ir.ui.view">
        <field name="name">iot.schedule.form</field>
        <field name="model">iot.schedule</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="device_id" invisible="group_id != False"/>
                            <field name="group_id" invisible="device_id != False"/>
                            <field name="command"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="timezone"/>
                            <field name="hour"/>
                            <field name="minute"/>
                        </group>
                    </group>
                    <group string="Execution Days">
                        <field name="monday"/>
                        <field name="tuesday"/>
                        <field name="wednesday"/>
                        <field name="thursday"/>
                        <field name="friday"/>
                        <field name="saturday"/>
                        <field name="sunday"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_iot_schedule" model="ir.actions.act_window">
        <field name="name">Schedules</field>
        <field name="res_model">iot.schedule</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_iot_schedule" name="Schedules" parent="menu_iot_switch_root" action="action_iot_schedule" sequence="20" groups="base.group_erp_manager"/>
</odoo>
