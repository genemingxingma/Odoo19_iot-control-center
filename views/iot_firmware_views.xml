<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_iot_firmware_tree" model="ir.ui.view">
        <field name="name">iot.firmware.tree</field>
        <field name="model">iot.firmware</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="version"/>
                <field name="company_id"/>
                <field name="filename"/>
                <field name="checksum"/>
            </list>
        </field>
    </record>

    <record id="view_iot_firmware_form" model="ir.ui.view">
        <field name="name">iot.firmware.form</field>
        <field name="model">iot.firmware</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_open_push_wizard" type="object" string="Batch Push Upgrade" class="btn-primary"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="version"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group>
                            <field name="filename"/>
                            <field name="file" filename="filename"/>
                            <field name="checksum" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="note"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_iot_firmware" model="ir.actions.act_window">
        <field name="name">Firmware</field>
        <field name="res_model">iot.firmware</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_iot_firmware" name="Firmware Management" parent="menu_iot_switch_root" action="action_iot_firmware" sequence="30" groups="base.group_erp_manager"/>
</odoo>
