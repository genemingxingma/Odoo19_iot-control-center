<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_iot_device_bind_wizard_form" model="ir.ui.view">
        <field name="name">iot.device.bind.wizard.form</field>
        <field name="model">iot.device.bind.wizard</field>
        <field name="arch" type="xml">
            <form string="Bind Switch by ID">
                <group>
                    <field name="validated" invisible="1"/>
                    <field name="serial" placeholder="relay-001"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                    <field name="department_id"/>
                    <field name="location_id"/>
                </group>
                <group string="Validation" invisible="candidate_device_id == False">
                    <field name="candidate_device_id"/>
                    <field name="candidate_switch_id"/>
                    <field name="candidate_last_seen"/>
                </group>
                <footer>
                    <button string="Search ID" type="object" name="action_search_id" class="btn-secondary"/>
                    <button string="Confirm Bind" type="object" name="action_confirm_bind" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
