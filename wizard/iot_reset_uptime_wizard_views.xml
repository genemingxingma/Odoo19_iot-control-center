<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_iot_reset_uptime_wizard_form" model="ir.ui.view">
        <field name="name">iot.reset.uptime.wizard.form</field>
        <field name="model">iot.reset.uptime.wizard</field>
        <field name="arch" type="xml">
            <form string="Confirm Reset">
                <group>
                    <field name="device_id"/>
                    <field name="current_total_hours"/>
                    <field name="reason" placeholder="Please input reset reason..." required="1"/>
                </group>
                <footer>
                    <button string="Confirm Reset" type="object" name="action_confirm_reset" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
