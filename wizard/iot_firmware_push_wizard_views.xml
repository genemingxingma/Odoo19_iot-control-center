<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_iot_firmware_push_wizard_form" model="ir.ui.view">
        <field name="name">iot.firmware.push.wizard.form</field>
        <field name="model">iot.firmware.push.wizard</field>
        <field name="arch" type="xml">
            <form string="Batch Upgrade Push">
                <group>
                    <field name="firmware_id" readonly="1"/>
                    <field name="company_id"/>
                    <field name="department_id"/>
                    <field name="location_id"/>
                    <field name="device_ids" widget="many2many_tags" domain="[('company_id', '=', company_id), ('active', '=', True)]"/>
                </group>
                <footer>
                    <button string="Push Upgrade" name="action_push" type="object" class="btn-primary"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
